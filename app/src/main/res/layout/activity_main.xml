<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="800dp"
        android:layout_height="1000dp"
        android:rotation="90"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orofondo" />

    <Button
        android:id="@+id/play"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="PLAY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:clickable="false"
        android:text="Play Again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/scoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Score:"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scoreTitle"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/scoreText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank:"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreBankValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/scoreText1"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/scoreBankValue"
                    android:text=" You:"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreYouValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/scoreText2"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/matchResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:alpha="0"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bankText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bankScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bankText"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp">

            <RelativeLayout
                android:id="@+id/moreRel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/oneMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="140dp"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:text="ONE MORE" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/moreRel">

                <Button
                    android:id="@+id/stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:text="STOP" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="300dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/youText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/youScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/youText"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/card1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card6"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card7"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card8"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card9"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card10"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card11"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card12"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card13"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card14"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/card15"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clubs01" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/pile"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/pile" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>